@model FlightTracking.Models.Plane

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutInternal.cshtml";
    Html.EnableClientValidation(true);
}

<h2>Details</h2>

<div>
    <h4>Plane</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AirLine)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AirLine)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ArrivalTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArrivalTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ArrivalHall)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArrivalHall)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ArrivalBulding)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArrivalBulding)
        </dd>

    </dl>
</div>

<div style="margin-left:500px">
                
                 
                <button type="button" class="btn btn-primary " data-toggle="modal" data-target="#addpassanger" id= @Model.ID >
                    Add Passanger
                </button>

                 
                <div class="modal fade" id="addpassanger" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">

                            <div class="modal-body">

                                @Html.Action("AddPassanger", "Passanger",new { id= Model.ID })



                            </div>
                        </div>
                    </div>
                </div>
                

</div>
<br />


<p class="text-center text-info ">
    <b> The Plane Passanger</b>
</p>
<div>
    @Html.Action("Planepassaner","Passanger",new {id=Model.ID })
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
