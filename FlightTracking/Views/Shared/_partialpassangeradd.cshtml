@model FlightTracking.Models.Passanger


@{
    ViewBag.Title = "AddPassanger";
    Layout = null;
    Html.EnableClientValidation(true);
}

<h2>AddPassanger</h2>

@{
    AjaxOptions ajaxaddpassanger = new AjaxOptions
    {
        Confirm = "Are You Sure?",
        HttpMethod = "post",
        InsertionMode = InsertionMode.InsertAfter,
        UpdateTargetId = "tbody2",
