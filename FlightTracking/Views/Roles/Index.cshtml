@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
     Layout = "~/Views/Shared/_LayoutInternal.cshtml";
}

<h2>Roles Listing </h2>

@Html.ActionLink("Create New Role", "Create",null,new { @class="btn btn-primary" }) | @Html.ActionLink("Manage User Role", "ManageUserRoles",null,new { @class="btn btn-primary" })
<hr />
<div>
    @foreach (var role in Model)
    {
        <p>
            <strong>@role.Name | </strong>
            <span onclick="return confirm('Are you sure to delete?')"><a href="/Roles/Delete?RoleName=@role.Name" class="btn btn-danger" >Delete</a></span> |
            @Html.ActionLink("Edit", "Edit", new { roleName = @role.Name },new { @class="btn btn-primary"})
        </p>
    }
</div>

